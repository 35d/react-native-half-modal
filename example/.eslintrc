{
  "parser": "babel-eslint",
  "plugins": ["flowtype", "react-native", "prettier"],
  "extends": ["airbnb", "prettier"],
  "globals": {
    "fetch": false,
    "__DEV__": false,
    "alert": false
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "printWidth": 130,
        "parser": "flow",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid"
      }
    ],
    "no-console": 0,
    "max-len": "off",
    "no-useless-concat": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/prop-types": [
      0,
      {
        "ignore": ["navigator"]
      }
    ],
    "react/sort-comp": [
      2,
      {
        "order": ["type-annotations", "static-methods", "lifecycle", "everything-else", "render"]
      }
    ],
    "class-methods-use-this": [0],
    "flowtype/require-valid-file-annotation": [2, "always"],
    "arrow-parens": [1, "as-needed"],
    "react-native/no-unused-styles": 2
  }
}
